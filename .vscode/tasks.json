{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build - Debug",
            "type": "shell",
            "command": "scons build robot=${input:robot} profile=debug profiling=true",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}/ut-robomaster"
            }
        },
        {
            "label": "Build - Release",
            "type": "shell",
            "command": "scons build robot=${input:robot}",
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}/ut-robomaster"
            }
        },
        {
            "label": "Flash - Debug",
            "type": "shell",
            "command": "scons run robot=${input:robot} profile=debug profiling=true",
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}/ut-robomaster"
            }
        },
        {
            "label": "Flash - Release",
            "type": "shell",
            "command": "scons run robot=${input:robot}",
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}/ut-robomaster"
            }
        },
        {
            "label": "Connect to Remote Debugger",
            "type": "shell",
            "command": "ssh -L 7184:localhost:7184 ${input:debug_dest}",
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "echo": true,
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ],
    "inputs": [
        {
            "id": "robot",
            "description": "Robot type:",
            "type": "pickString",
            "options": [
                "standard",
                "hero",
                "sentry"
            ],
            "default": "standard"
        },
        {
            "id": "debug_dest",
            "description": "Remote destination (SSH):",
            "type": "promptString",
            "default": ""
        },
    ]
}