{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build - Debug",
            "type": "shell",
            "command": "scons build robot=${input:robot} profile=debug profiling=true",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}/ut-robomaster"
            }
        },
        {
            "label": "Build - Release",
            "type": "shell",
            "command": "scons build robot=${input:robot}",
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}/ut-robomaster"
            }
        },
        {
            "label": "Build All",
            "type": "shell",
            "command": "scons build robot=standard && scons build robot=hero && scons build robot=sentry",
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}/ut-robomaster"
            }
        },
        {
            "label": "Connect to Robot",
            "type": "shell",
            "command": "ssh -fF ssh.config ${input:debug_dest} sleep 15",
            "hide": true,
            "presentation": {
                "echo": true,
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ],
    "inputs": [
        {
            "id": "robot",
            "type": "command",
            "command": "extension.commandvariable.pickStringRemember",
            "args": {
                "key": "robot",
                "description": "Robot type:",
                "addLabelToTop": "${remember:robot}",
                "options": [
                    "standard",
                    "hero",
                    "sentry"
                ]
            }
        },
        {
            "id": "debug_dest",
            "type": "command",
            "command": "extension.commandvariable.pickStringRemember",
            "args": {
                "key": "debug_dest",
                "addLabelToTop": "${remember:robot}",
                "description": "Remote destination (SSH):",
                "pattern": {
                    "regexp": "host (\\S+).*?hostname (\\S+)",
                    "flags": "gsi",
                    "match": "find",
                    "option": {
                        "label": "$1",
                        "value": "$1",
                        "description": "$2"
                    }
                },
                "fileName": "${workspaceFolder}/ssh.config"
            }
        },
    ]
}